                         include \
                         src \
                         main.c \
                         python \
                         testsuite
FILE_PATTERNS          = *.c *.h *.py *.dox
RECURSIVE              = NO
EXCLUDE_PATTERNS       = */build/* */dist.* *.so

# ── Extraction ─────────────────────────────────────────────────────────────────
EXTRACT_ALL            = YES
EXTRACT_STATIC         = YES
