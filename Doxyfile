# ── Preprocessing ──────────────────────────────────────────────────────────────
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = NO

# ── Diagrams ───────────────────────────────────────────────────────────────────
HAVE_DOT               = NO

# ── Appearance ─────────────────────────────────────────────────────────────────
QUIET                  = NO
WARNINGS               = YES
